<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dynamic.backgroundOnMain"
    android:orientation="vertical"
    android:paddingHorizontal="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:paddingTop="14dp"
        android:text="@string/app_name"
        android:textColor="@color/YPWhite"
        android:fontFamily="@font/ys_display_medium"
        android:textSize="@dimen/primary_text_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="24dp"
        android:paddingBottom="28dp"
        android:showDividers="middle"
        android:divider="@drawable/clear_medium_divider">

        <Button
            android:id="@+id/search_button"
            style="@style/MainButtonStyle"
            android:text="@string/search"
            app:icon="@drawable/search_loupe" />

        <Button
            android:id="@+id/media_library_button"
            style="@style/MainButtonStyle"
            android:text="@string/media_library"
            app:icon="@drawable/media_library" />

        <Button
            android:id="@+id/settings_button"
            style="@style/MainButtonStyle"
            android:text="@string/settings"
            app:icon="@drawable/setting" />
    </LinearLayout>

</LinearLayout>