<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_0</item>
        <item name="android:layout_weight">1</item>
        <item name="android:insetTop">@dimen/size_0</item>
        <item name="android:insetBottom">@dimen/size_0</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:outlineProvider">none</item>
        <item name="android:backgroundTint">@color/YPWhite</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textSize">@dimen/YS_22</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/YPBlack</item>
        <item name="cornerRadius">@dimen/l_corner_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/YPBlack</item>
    </style>
    <style name="SettingsButtonTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/dynamic.text.primary</item>
    </style>
    <style name="SettingsImageViewStyle">
        <item name="android:layout_width">@dimen/size_24</item>
        <item name="android:layout_height">@dimen/size_24</item>
        <item name="tint">@color/dynamic.text.primary</item>
    </style>
    <style name="SupplementaryButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/size_36</item>
        <item name="android:layout_marginTop">@dimen/size_24</item>
        <item name="android:insetTop">@dimen/size_0</item>
        <item name="android:insetBottom">@dimen/size_0</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:letterSpacing">0</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/ys_text_medium</item>
        <item name="android:textSize">@dimen/size_14</item>
        <item name="backgroundTint">@color/dynamic.text.primary</item>
        <item name="android:textColor">@color/dynamic.background</item>
        <item name="cornerRadius">18dp</item>
    </style>
    <style name="TabLayoutTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="font">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/YS_14</item>
    </style>
    <style name="TextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/dynamic.foreground.textInputEmptyBoxColor</item>
        <item name="hintTextColor">@color/dynamic.foreground.textInputEmptyBoxColor</item>
    </style>
    <style name="CustomAlertDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorSurface">@color/YPWhite</item>
        <item name="android:dialogCornerRadius">@dimen/size_4</item>
        <item name="materialAlertDialogTitleTextStyle">@style/CustomAlertDialogTitleTextStyle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/CustomAlertDialogBodyTextStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/CustomAlertDialogButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/CustomAlertDialogButtonStyle</item>
    </style>
    <style name="CustomAlertDialogTitleTextStyle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/YPBlack</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/YS_18</item>
    </style>
    <style name="CustomAlertDialogBodyTextStyle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/YPBlack</item>
        <item name="android:textSize">@dimen/YS_13</item>
    </style>
    <style name="CustomAlertDialogButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textAllCaps">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:backgroundTint">@color/YPWhite</item>
        <item name="android:outlineProvider">none</item>
        <item name="android:textColor">@color/YPBlue</item>
        <item name="android:textSize">@dimen/YS_14</item>
    </style>
</resources>