<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/zero_size</item>
        <item name="android:layout_weight">1</item>
        <item name="android:insetTop">@dimen/zero_size</item>
        <item name="android:insetBottom">@dimen/zero_size</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:outlineProvider">none</item>
        <item name="android:backgroundTint">@color/YPWhite</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textSize">@dimen/YS_22</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/YPBlack</item>
        <item name="cornerRadius">@dimen/medium_corner_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/YPBlack</item>
    </style>
    <style name="SettingsButtonTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/dynamic.text.primary</item>
    </style>
    <style name="SettingsImageViewStyle">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="tint">@color/dynamic.text.primary</item>
    </style>
</resources>